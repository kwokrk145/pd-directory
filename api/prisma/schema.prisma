generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int     @id @default(autoincrement())
  email         String  @unique
  passwordHash  String 
  firstName     String
  lastName      String

  experiences   Experience[]
}

model Experience {
  id            Int     @id @default(autoincrement())
  userId        Int 
  user          User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  title         String
  organization  String
  startDate     String
  endDate       String
  description   String?
}
